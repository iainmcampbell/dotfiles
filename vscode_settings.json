{
  "editor.tabSize": 2,
  "editor.scrollBeyondLastLine": false,
  "workbench.colorTheme": "Oceanic Next",
  "workbench.colorCustomizations": {
    "[Oceanic Next]": {
      "statusBar.background": "#2e3238",
      "statusBar.border": "#444444",
      "statusBar.noFolderBackground": "#212121",
      "statusBar.debuggingBackground": "#263238",
      "tab.inactiveBackground": "#1b2b34",
      "tab.activeBackground": "#273e4c",
      "tab.border": "#3d4b52",
      "tab.activeBorder": "#62b3b2"
    }
  },
  "editor.matchBrackets": "near",
  "workbench.editor.closeEmptyGroups": false,
  "files.exclude": {
    "**/node_modules": true
  },
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.highlightModifiedTabs": true,
  "eslint.run": "onSave",
  "editor.wordBasedSuggestions": false,
  "files.trimTrailingWhitespace": true,
  "editor.fontWeight": "500",
  "editor.fontFamily": "Menlo, monospace",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.lineHeight": 15,
  "editor.lightbulb.enabled": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.links": false,
  "window.restoreWindows": "all",
  "window.newWindowDimensions": "inherit",
  "explorer.confirmDragAndDrop": false,
  "javascript.suggest.autoImports": false,
  "editor.renderWhitespace": "none",
  "workbench.statusBar.visible": true,
  "window.titleBarStyle": "native",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "prettier.bracketSpacing": false,
  "prettier.bracketSameLine": false,
  "prettier.arrowParens": "always",
  "workbench.startupEditor": "none",
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnSave": true,
  "workbench.panel.defaultLocation": "right",
  "editor.minimap.showSlider": "always",
  "gitblame.statusBarMessageClickAction": "Open tool URL",
  "debug.showInStatusBar": "never",
  "workbench.editor.tabSizing": "shrink",
  "editor.minimap.enabled": false,
  "terminal.integrated.allowChords": false,
  "editor.codeLens": false,
  "editor.hover.delay": 750,
  "window.autoDetectHighContrast": false,
  "editor.bracketPairColorization.enabled": false,
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "liquid": "liquid"
  },
  "remote.SSH.defaultExtensions": [
    "stalyo.select-quotes"
  ],
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp"
  },
  "github.copilot.enable": {
    "*": false
  },
  "editor.inlineSuggest.enabled": false
}