{
  "workbench.colorTheme": "Oceanic Next",
  "workbench.preferredLightColorTheme": "GitHub Light Default",
  "workbench.preferredDarkColorTheme": "Oceanic Next",
  "workbench.colorCustomizations": {
    "[Oceanic Next]": {
      "statusBar.background": "#2e3238",
      "statusBar.border": "#444444",
      "statusBar.noFolderBackground": "#212121",
      "statusBar.debuggingBackground": "#263238",
      "tab.inactiveBackground": "#1b2b34",
      "tab.activeBackground": "#273e4c",
      "tab.border": "#3d4b52",
      "tab.activeBorder": "#62b3b2"
    }
  },
  "workbench.editor.closeEmptyGroups": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.tabSizing": "shrink",
  "workbench.statusBar.visible": true,
  "workbench.startupEditor": "none",
  "workbench.panel.defaultLocation": "right",

  "files.exclude": {
    "**/node_modules": true
  },
  "files.trimTrailingWhitespace": true,

  "editor.matchBrackets": "near",
  "editor.tabSize": 2,
  "editor.scrollBeyondLastLine": false,
  "editor.wordBasedSuggestions": "off",
  "editor.fontWeight": "500",
  "editor.fontFamily": "Menlo, monospace",
  "editor.lineHeight": 15,
  "editor.lightbulb.enabled": "off",
  "editor.links": false,
  "explorer.confirmDragAndDrop": false,
  "editor.renderWhitespace": "none",
  "editor.formatOnSave": true,
  "editor.minimap.showSlider": "always",
  "editor.minimap.enabled": false,
  "editor.codeLens": false,
  "editor.hover.delay": 750,
  "editor.bracketPairColorization.enabled": false,
  "editor.inlineSuggest.enabled": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",

  "[mdx]": {"editor.formatOnSave": false},
  "[markdown]": {"editor.formatOnSave": false},

  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[typescriptreact]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },

  "[erb]": {
    "editor.defaultFormatter": "aliariff.vscode-erb-beautify"
  },
  "[json]": {"editor.defaultFormatter": "vscode.json-language-features"},
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.formatOnType": true,
    "editor.insertSpaces": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "editor.rulers": [120],
    "editor.semanticHighlighting.enabled": true
  },

  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "prettier.bracketSpacing": false,
  "prettier.bracketSameLine": false,
  "prettier.arrowParens": "always",

  "terminal.integrated.allowChords": false,
  "terminal.integrated.tabs.location": "left",

  "window.restoreWindows": "all",
  "window.newWindowDimensions": "inherit",
  "window.titleBarStyle": "native",
  "window.autoDetectHighContrast": false,

  "gitblame.statusBarMessageClickAction": "Open tool URL",
  "eslint.run": "onSave",
  "debug.showInStatusBar": "never",
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {"liquid": "liquid"},
  "vscode-pets.petType": "totoro",
  "security.workspace.trust.untrustedFiles": "open",
  "remote.SSH.defaultExtensions": ["stalyo.select-quotes"],
  "remote.SSH.connectTimeout": 150,

  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.renameSuggestions.triggerAutomatically": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "stylelint.useLocal": true,
  "terminal.integrated.tabs.enabled": false,

  "git.openRepositoryInParentFolders": "always",
  "json.format.keepLines": true
}
